<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sd="http://schemas.stride3d.net/xaml/presentation"
             xmlns:caevm="using:Stride.Core.Assets.Editor.ViewModels"
             xmlns:capvm="using:Stride.Core.Assets.Presentation.ViewModels"
             xmlns:gscv="using:Stride.GameStudio.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Stride.GameStudio.Avalonia.Views.AssetExplorerView"
             x:DataType="caevm:AssetCollectionViewModel">
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://Stride.Core.Assets.Editor.Avalonia/Views/ImageResources.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </UserControl.Resources>
  <DockPanel>
    <!-- Toolbar -->
    <sd:ToolBarTray DockPanel.Dock="Top">
      <!-- New asset -->
      <sd:ToolBar>
        <ToggleButton x:Name="ToggleNewAsset"
                      sd:ToolBar.OverflowMode="Never">
          <StackPanel Orientation="Horizontal">
            <Image Source="{StaticResource ImageAdd}" MaxWidth="16" MaxHeight="16" />
            <TextBlock Text="{sd:LocalizeString Add asset}" Margin="2,2,4,2" VerticalAlignment="Center"/>
          </StackPanel>
        </ToggleButton>
        <Popup PlacementTarget="ToggleNewAsset" Placement="BottomEdgeAlignedLeft"
               IsOpen="{Binding #ToggleNewAsset.IsChecked, Mode=TwoWay}" IsLightDismissEnabled="True">
          <Border>
            <TextBlock Text="ADD ITEM PLACEHOLDER"/>
          </Border>
        </Popup>
      </sd:ToolBar>
      <!-- View options -->
      <sd:ToolBar>
        <Menu sd:ToolBar.OverflowMode="Never">
          <MenuItem>
            <MenuItem.Header>
              <Image Source="{StaticResource ImageView}" MaxHeight="16"
                     ToolTip.Tip="{sd:LocalizeString Asset view options, Context=ToolTip}"
                     ToolTip.ShowOnDisabled="False"/>
            </MenuItem.Header>
            <MenuItem Header="{sd:LocalizeString Display, Context=Menu}">
              <MenuItem Header="{sd:LocalizeString Assets in selected folder only, Context=Menu}"
                        Command="{Binding SetDisplayAssetModeCommand}"
                        CommandParameter="{x:Static caevm:DisplayAssetMode.AssetInSelectedFolderOnly}"
                        ToggleType="CheckBox" IsChecked="{Binding DisplayAssetMode, Mode=OneWay, Converter={sd:IsEqualToParam}, ConverterParameter={x:Static caevm:DisplayAssetMode.AssetInSelectedFolderOnly}}"/>
              <MenuItem Header="{sd:LocalizeString Assets and folders in selected folder, Context=Menu}"
                        Command="{Binding SetDisplayAssetModeCommand}"
                        CommandParameter="{x:Static caevm:DisplayAssetMode.AssetAndFolderInSelectedFolder}"
                        ToggleType="CheckBox" IsChecked="{Binding DisplayAssetMode, Mode=OneWay, Converter={sd:IsEqualToParam}, ConverterParameter={x:Static caevm:DisplayAssetMode.AssetAndFolderInSelectedFolder}}"/>
              <MenuItem Header="{sd:LocalizeString Assets in selected folder and subfolders, Context=Menu}"
                        Command="{Binding SetDisplayAssetModeCommand}"
                        CommandParameter="{x:Static caevm:DisplayAssetMode.AssetInSelectedFolderAndSubFolder}"
                        ToggleType="CheckBox" IsChecked="{Binding DisplayAssetMode, Mode=OneWay, Converter={sd:IsEqualToParam}, ConverterParameter={x:Static caevm:DisplayAssetMode.AssetInSelectedFolderAndSubFolder}}"/>
            </MenuItem>
            <MenuItem Header="{sd:LocalizeString Sort by, Context=Menu}">
              <MenuItem Header="{sd:LocalizeString Name, Context=Menu}"
                        Command="{Binding SetSortRuleCommand}"
                        CommandParameter="{x:Static caevm:SortRule.Name}"
                        ToggleType="CheckBox" IsChecked="{Binding SortRule, Mode=OneWay, Converter={sd:IsEqualToParam}, ConverterParameter={x:Static caevm:SortRule.Name}}"/>
              <MenuItem Header="{sd:LocalizeString Date modified, Context=Menu}"
                        Command="{Binding SetSortRuleCommand}"
                        CommandParameter="{x:Static caevm:SortRule.ModificationDateThenName}"
                        ToggleType="CheckBox" IsChecked="{Binding SortRule, Mode=OneWay, Converter={sd:IsEqualToParam}, ConverterParameter={x:Static caevm:SortRule.ModificationDateThenName}}"/>
              <MenuItem Header="{sd:LocalizeString Type, Context=Menu}"
                        Command="{Binding SetSortRuleCommand}"
                        CommandParameter="{x:Static caevm:SortRule.TypeOrderThenName}"
                        ToggleType="CheckBox" IsChecked="{Binding SortRule, Mode=OneWay, Converter={sd:IsEqualToParam}, ConverterParameter={x:Static caevm:SortRule.TypeOrderThenName}}"/>
              <MenuItem Header="{sd:LocalizeString Unsaved changes, Context=Menu}"
                        Command="{Binding SetSortRuleCommand}"
                        CommandParameter="{x:Static caevm:SortRule.DirtyThenName}"
                        ToggleType="CheckBox" IsChecked="{Binding SortRule, Mode=OneWay, Converter={sd:IsEqualToParam}, ConverterParameter={x:Static caevm:SortRule.DirtyThenName}}"/>
            </MenuItem>
          </MenuItem>
        </Menu>
      </sd:ToolBar>
      <!-- Filters -->
      <sd:ToolBar>
        <sd:SearchComboBox Watermark="{sd:LocalizeString Add a filter...}"
                           ToolTip.Tip="{sd:LocalizeString Filter assets by name\, type or tag}"
                           ToolTip.ShowOnDisabled="False">

        </sd:SearchComboBox>
      </sd:ToolBar>
    </sd:ToolBarTray>
    <!-- Assets view -->
    <ListBox ItemsSource="{Binding Assets}"
             SelectedItems="{Binding SelectedContent}"
             SelectionMode="Multiple"
             Margin="4">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate DataType="{x:Type capvm:AssetViewModel}">
          <StackPanel Orientation="Horizontal">
            <Interaction.Behaviors>
              <EventTriggerBehavior EventName="DoubleTapped">
                <InvokeCommandAction Command="{Binding ((caevm:SessionViewModel)Session).EditSelectedContentCommand}" />
              </EventTriggerBehavior>
            </Interaction.Behaviors>
            <TextBlock Text="Asset: " />
            <TextBlock Text="{Binding Name}" />
            <Image Source="{Binding ThumbnailData?.Presenter, Converter={gscv:StrideImage}}"
                   Width="64" Height="64"/>
          </StackPanel>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ListBox>
  </DockPanel>
</UserControl>
